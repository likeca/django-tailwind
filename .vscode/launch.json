{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django Tailwind",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "tailwind",
                "start"
            ],
            "django": true
        },
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "env": {
                "DJANGO_ENVIRONMENT": "Development"
            },
            "django": true
        }
    ],
    "compounds": [
        {
            "name": "Launch All",
            "configurations": [
                "Python: Django Tailwind",
                "Python: Django"
            ],
            "stopAll": true
        }
    ]
}